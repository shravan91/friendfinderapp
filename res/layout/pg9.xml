<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/blue" >
  <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="464dp"
        android:background="@drawable/blue" >

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="142dp"
            android:layout_toRightOf="@+id/TextView08"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/ph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/email"
            android:layout_alignLeft="@+id/duname"
            android:layout_marginBottom="54dp"
            android:inputType="phone"
            android:maxLength="10" />

        <EditText
            android:id="@+id/duname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ph"
            android:layout_alignLeft="@+id/email"
            android:editable="false"
            android:enabled="false" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/TextView05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/duname"
            android:layout_alignBottom="@+id/duname"
            android:text="Username: "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/TextView08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ph"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/TextView05"
            android:text="Phone Number: "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/email"
            android:layout_alignParentLeft="true"
            android:text="Email id: "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Update Here!"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/email"
            android:layout_centerVertical="true"
            android:text="Update" />

    </RelativeLayout>

</ScrollView>